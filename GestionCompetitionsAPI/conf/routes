# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           v1.controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      v1.controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    v1.controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#Authentication 
#GET     /auth/signup                controllers.Auth.startSignUp
#POST    /auth/signup                controllers.Auth.handleStartSignUp
#GET     /auth/signup/:token         controllers.Auth.signUp(token:String)
# 
#GET     /auth/reset                 controllers.Auth.startResetPassword
#POST    /auth/reset                 controllers.Auth.handleStartResetPassword
#GET     /auth/reset/:token          controllers.Auth.resetPassword(token:String)
#POST    /auth/reset/:token          controllers.Auth.handleResetPassword(token:String)
# 
#GET     /auth/signin                controllers.Auth.signIn
#POST    /auth/authenticate          controllers.Auth.authenticate
#GET     /auth/social/:providerId    controllers.Auth.socialAuthenticate(providerId:String)
#GET     /auth/signout               controllers.Auth.signOut
POST    /login                      v1.controllers.AuthenticationController.signIn()
POST    /logout                     v1.controllers.AuthenticationController.signOut()

# Arbitres
GET		/v1/persons					v1.controllers.PersonController.index(sort: Option[Seq[String]], fields: Option[Seq[String]], offset: Option[Int], limit: Option[Int])
POST	/v1/persons/search			v1.controllers.PersonController.searchPersons(sort: Option[Seq[String]], fields: Option[Seq[String]], offset: Option[Int], limit: Option[Int])
GET		/v1/persons/:id				v1.controllers.PersonController.getPerson(id: String, fields: Option[Seq[String]])
POST	/v1/persons					v1.controllers.PersonController.addPerson
PUT 	/v1/persons/:id				v1.controllers.PersonController.editPerson(id: String)
DELETE	/v1/persons/:id				v1.controllers.PersonController.deletePerson(id: String)